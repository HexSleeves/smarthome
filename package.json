{
	"name": "smarthome",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:backend": "npm run dev -w @smarthome/backend",
		"dev:frontend": "npm run dev -w @smarthome/frontend",
		"build": "npm run build -w @smarthome/frontend && npm run build -w @smarthome/backend",
		"start": "npm run start -w @smarthome/backend",
		"format": "biome format --write ",
		"lint": "biome lint --write",
		"check": "bunx biome check --write",
		"typecheck": "biome typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"concurrently": "^9.2.1"
	}
}
