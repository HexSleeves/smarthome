{
	"name": "smarthome",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
		"dev:backend": "bun run --filter @smarthome/backend dev",
		"dev:frontend": "bun run --filter @smarthome/frontend dev",
		"build": "bun run --filter @smarthome/frontend build && bun run --filter @smarthome/backend build",
		"start": "bun run --filter @smarthome/backend start",
		"format": "biome format --write ",
		"lint": "biome lint --write",
		"check": "bunx biome check --write",
		"typecheck": "biome typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"concurrently": "^9.2.1"
	}
}
