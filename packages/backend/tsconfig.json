{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"paths": {
			"@smarthome/shared": ["../shared/src/index.ts"],
			"@smarthome/shared/*": ["../shared/src/*"]
		}
	},
	"include": ["src/**/*", "../shared/src/**/*"],
	"exclude": ["node_modules"]
}
